<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_upcoming_events_button_sync_load"
            android:layout_width="@dimen/activity_upcoming_events_button_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_spacing_10x"
            android:text="@string/activity_upcoming_events__button_sync_loading" />

        <Button
            android:id="@+id/activity_upcoming_events_button_async_load"
            android:layout_width="@dimen/activity_upcoming_events_button_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_spacing_10x"
            android:text="@string/activity_upcoming_events__button_async_loading" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/activity_upcoming_events_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:indeterminateDrawable="@drawable/spinner_png"
            android:padding="@dimen/layout_spacing_10x"
            android:visibility="invisible"
            android:layout_marginTop="@dimen/layout_spacing_10x"/>

        <ScrollView
            android:id="@+id/activity_upcoming_events_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/layout_spacing_10x">

            <TextView
                android:id="@+id/activity_upcoming_events_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
    </FrameLayout>
</LinearLayout>